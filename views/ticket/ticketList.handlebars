<div class="tickets" id="tickets">
    <table border="1px">
        <tr>
            <td> Título </td>
            <td> Descrição </td>
            <td> Status </td>
            <td> Categoria </td>
            <td> Técnico </td>
            <td> Observação </td>
            {{#if adm}}
            <td> Editar </td>
            {{/if}}
            {{#if tecnico}}
            <td> Editar </td>
            {{/if}}
        </tr>
        {{#each tickets}}
        <tr>
            <td>{{titulo}}</td>
            <td>{{descricao}}</td>
            <td >
                {{#switch status}}
                {{#case "P"}}
                <option class="status pendente"> Pendente </option>
                {{/case}}
                {{#case "A"}}
                <option class="status analise"> Em análise </option>
                {{/case}}
                {{#case "R"}}
                <option class="status resolvido"> Resolvido </option>
                {{/case}}
                {{#case "C"}}
                <option class="status cancelado"> Cancelado </option>
                {{/case}}
                {{#default}}
                <option> Valor desconhecido </option>
                {{/default}}
                {{/switch}}
            </td>
            <td>{{categoria}}</td>
            <td>{{#if tecnicoId}}{{tecnicoId}}{{else}}N/A{{/if}}</td>
            <td>{{observacao}}</td>
            {{#if ../adm}}
            <td><a href="ticketUpdate/{{id}}">Editar</a></td>
            {{/if}}
            {{#if ../tecnico}}
            <td><a href="ticketUpdate/{{id}}">Editar</a></td>
            {{/if}}
        </tr>
        {{/each}}
    </table>
</div>
<script src="ticketList.js"></script>